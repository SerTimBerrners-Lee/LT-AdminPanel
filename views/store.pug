div(class="form-row p-5 animated fadeInLeftBig")
    div(class="form-group col-md-6")
        ul(class="list-group" id="add-section")
            li(class="list-group-item add-item-item hoverable" id="add-section-item") 
                span Добавить новый раздел
                i(class="fas fa-plus") 
            li(class="list-group-item") 
                input(type="text" id="add-section-input" class="form-control" placeholder="Название раздела")
